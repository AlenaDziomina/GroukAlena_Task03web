<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ParsServlet</servlet-name>
        <servlet-class>by.epam.task03web.controller.ParsServlet</servlet-class>
        <init-param>
            <param-name>log4j-properties-location</param-name>
            <param-value>/WEB-INF/Log4J.properties</param-value>
        </init-param>
        <init-param>
            <param-name>resource-xml-location</param-name>
            <param-value>/resource/equip_test.xml</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParsServlet</servlet-name>
        <url-pattern>/ParsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>by.epam.task03.ProjectExceptions.NullInitException</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <description>Header and footer settings</description>
            <display-name>main</display-name>
            <url-pattern>/result.jsp</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
